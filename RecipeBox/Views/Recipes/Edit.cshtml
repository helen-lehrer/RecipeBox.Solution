@{
  Layout = "_Layout";
}

@model RecipeBox.Models.Recipe

<h2>Edit</h2>

<h4>Edit this Recipe: @Html.DisplayFor(model => model.RecipeName)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.RecipeId)

  @Html.Label("Recipe Name:")
  @Html.TextBoxFor(model => model.RecipeName)
  @Html.Label("Ingredients:")
  @Html.TextBoxFor(model => model.Ingredients)
  @Html.Label("Instructions:")
  @Html.TextBoxFor(model => model.Instructions)

  <input type="submit" value="Save" />
}

<p>@Html.ActionLink("Back to list", "Index")</p>