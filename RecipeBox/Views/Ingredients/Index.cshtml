@{
  Layout = "_Layout";
}

@using RecipeBox.Models;
@model IEnumerable<RecipeBox.Models.Ingredient>

<h1>Ingredients for @User.Identity.Name</h1>

@if (@Model.Any())
{
  <ul>
    @foreach (Ingredient ingredient in Model)
    {
      <li>@Html.ActionLink($"{ingredient.IngredientName}", "Details", new { id = ingredient.IngredientId })</li>
    }
  </ul>
} 
else
{
  <h3>No ingredients have been added yet!</h3>
} 

<p>@Html.ActionLink("Add New Ingredient", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>
