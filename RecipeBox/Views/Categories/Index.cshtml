@{
  Layout = "_Layout";
}

@using RecipeBox.Models;

<h1>Categories</h1>

@if (@Model.Count == 0)
{
  <h3>No Categories have been added yet!</h3>
} 
<ul>
  @foreach (Category Category in Model)
  {
    <li>@Html.ActionLink($"{Category.CategoryName}", "Details", new { id = Category.CategoryId }) </li>
  }
</ul>

<p>@Html.ActionLink("Add New Category", "Create")</p>
<p>@Html.ActionLink("View All Recipes", "Index", "Recipes")</p>