@{
  Layout = "_Layout";
}

@using RecipeBox.Models;

<div class="jumbotron">
  <h1>Dr. Bubbie's RecipeBox</h1>
</div>
<div class="row index-list-all">
  <div class="col-6 border-right border-dark" id="index-list-Categories">
    <h4>Categories:</h4>
    @if (@Model.Count == 0)
      {
        <h3>No Categories have been added yet!</h3>
      } 
    <ul>
      @foreach(Category Category in Model)
      {
        <li>@Html.ActionLink($"{Category.CategoryName}", "Details", "Categories", new { id = Category.CategoryId })</li>
      }
    </ul>
  </div>
  <div class="col-6 border-left border-dark" id="index-list-Recipes">
    <h4>Recipes:</h4>
    @if (@Model.Count == 0)
      {
        <h3>No Recipes have been added yet!</h3>
      } 
    <ul>
      @foreach(Recipe Recipe in ViewBag.Recipe)
      {
        <li>@Html.ActionLink($"{Recipe.RecipeName}", "Details", "Recipes",new { id = Recipe.RecipeId })</li>
      }
    </ul>
    <p>@Html.ActionLink("Create an account", "Index", "Account")</p>
  </div>
</div>